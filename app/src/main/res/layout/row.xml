<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"

    android:layout_marginBottom="8dp"
    android:paddingTop="4dp"
    android:textAlignment="center"
    card_view:cardBackgroundColor="@color/colorPrimaryBackground"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            tools:ignore="ContentDescription"
            tools:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/logo"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Title"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/full_name"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/logo"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Street Address"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/street"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/logo"
            android:gravity="left"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="City Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/prov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/street"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/city"
            android:gravity="left"
            android:lines="1"
            android:maxLines="2"
            android:paddingLeft="4dp"
            android:text="Prov"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/street"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/prov"
            android:gravity="left"
            android:lines="1"
            android:maxLines="2"
            android:paddingLeft="4dp"
            android:text="Pcode"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phone1_lbl"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="Phone:" />

        <TextView
            android:id="@+id/phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/phone1_lbl"
            android:gravity="left"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:text="Main Phone Number"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/phone2_lbl"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone1_lbl"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:text="Toll Free:" />

        <TextView
            android:id="@+id/phone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone1"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/phone2_lbl"
            android:gravity="left"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:text="Toll Free Number"
            android:textColor="#990000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hline"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/phone2_lbl"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#303f9f"
            android:gravity="left"
            android:visibility="gone" />


        <TextView
            android:id="@+id/lbl_type"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone2_lbl"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:text="Type:" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone2"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/lbl_type"
            android:gravity="left"
            android:paddingLeft="4dp"
            android:text="Residential / Out Patient" />

        <TextView
            android:id="@+id/lbl_access"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_type"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:text="Access:" />

        <TextView
            android:id="@+id/access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/lbl_access"
            android:gravity="left"
            android:paddingLeft="4dp"
            android:text="Private / Public" />

        <TextView
            android:id="@+id/lbl_capacity"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"

            android:background="@color/colorAccent"
            android:gravity="center_horizontal"
            android:text="Beds"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/capacity"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_capacity"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
            android:gravity="center_horizontal"
            android:text="Beds"
            android:textColor="#009900" />

        <TextView
            android:id="@+id/lbl_email"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_access"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:text="Email:" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/access"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/lbl_email"
            android:gravity="left"
            android:paddingLeft="4dp"
            android:text="Email Address" />

        <TextView
            android:id="@+id/lbl_website"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_email"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="right"
            android:text="Web:" />

        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@+id/lbl_website"
            android:gravity="left"
            android:paddingLeft="4dp"
            android:text="Web Address" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

