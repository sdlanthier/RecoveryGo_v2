<?xml version="1.0" encoding="utf-8"?>


<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">


    <android.support.v7.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"

        android:layout_marginBottom="8dp"
        android:paddingTop="4dp"
        android:textAlignment="center"
        card_view:cardBackgroundColor="@color/grey_300"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_300"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/vname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="@string/form_field_name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/vstreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vname"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:text="@string/form_field_street" />

            <TextView
                android:id="@+id/vcity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vstreet"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/form_field_city" />

            <TextView
                android:id="@+id/sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vstreet"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/vcity"
                android:text="@string/form_field_comma" />

            <TextView
                android:id="@+id/vprov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vstreet"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/sp"
                android:text="@string/form_field_prov" />

            <TextView
                android:id="@+id/sp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vstreet"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/vprov"
                android:text="@string/form_field_comma" />

            <TextView
                android:id="@+id/vpcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vstreet"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/sp1"
                android:text="@string/form_field_pcode" />

            <TextView
                android:id="@+id/vphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vpcode"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/form_field_phone1"
                android:textAlignment="center"
                android:textColor="@color/blue2"
                android:textSize="20sp" />

            <android.support.v7.widget.CardView

                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/vphone"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:paddingTop="4dp"
                android:textAlignment="center"
                card_view:cardBackgroundColor="@color/colorPrimaryBackground"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="8dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/vnextavail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="41dp"
                        android:layout_marginEnd="1dp"
                        android:layout_toEndOf="@+id/imageButton2"
                        android:text="@string/form_field_next_avail"
                        android:textAlignment="center"
                        android:textColor="@color/blue2"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView22"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="2dp"
                        android:contentDescription="@string/content_description"
                        card_view:srcCompat="@drawable/beds_48" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:text="@string/form_field_next_avail_hdr"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>

