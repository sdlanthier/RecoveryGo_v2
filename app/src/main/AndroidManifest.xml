<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ca.recoverygo.recoverygo">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />


        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MeetingGuideActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MeetingInfoActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WebActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
            <activity android:name=".ui.BookTwelveStepsActivity"
                android:theme="@style/AppTheme.NoActionBar"  />
            <activity android:name=".ui.BookBigBookStoriesActivity"
                android:theme="@style/AppTheme.NoActionBar"  />
        <activity
            android:name=".LocatorActivity"
            android:label="@string/title_activity_locator"/>
        <activity
            android:name=".DirectoryActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FingerPaintMainActivity"
            android:parentActivityName=".MainActivity"/>
            <activity
                android:name=".FingerPaintActivity"
                android:parentActivityName=".FingerPaintMainActivity"  />
        <activity
            android:name=".DataInputActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LocalSetupActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DirectoryInputActivity"
            android:theme="@style/AppTheme.NoActionBar"  />
        <activity
            android:name=".MeetingListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MeetingSetupActivity"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name=".GalleryListActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GalleryActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".FacilitySetupActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".BedInputActivity" />






    </application>

</manifest>